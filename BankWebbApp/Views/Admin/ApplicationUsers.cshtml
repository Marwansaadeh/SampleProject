@model IEnumerable<BankWebbApp.ViewModels.ApplicationUsersDetails>
@{ ViewData["Title"] = "ViewApplicationUser";
    }
<br />
<div class="row">
    @foreach (var applicationuser in Model)
    {

    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@applicationuser.Email</h5>
                <br />
                <strong>Roles:</strong>
                @foreach (var role in applicationuser.AllRoles)
                {
                    <p class="card-text">@role</p>

                }
                <a class="btn btn-primary" asp-action="EditApplicationUser" asp-controller="Admin" asp-route-id="@applicationuser.Id">Edit</a>
                <button href="#myModal" class="btn btn-danger" data-toggle="modal">Delete</button>

                @*<a class="btn btn-primary" asp-action="DeleteApplicationUsers" asp-controller="Admin" asp-route-id="@applicationuser.Id" new { id="form-message-delete" }>Delete</a>*@
                <div id="myModal" class="modal fade">
                    <div class="modal-dialog modal-confirm">
                        <div class="modal-content">
                            <div class="modal-header flex-column">
                                <h4 class="modal-title w-100">Are you sure?</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            </div>
                            <div class="modal-body">
                                <p>Do you really want to delete this user? This process cannot be undone.</p>
                            </div>
                            <div class="modal-footer justify-content-center">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <form asp-action="DeleteApplicationUsers" asp-controller="Admin" asp-route-id="@applicationuser.Id">
                                    <button type="submit" class="btn btn-danger" id="mybtndelet" >Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
