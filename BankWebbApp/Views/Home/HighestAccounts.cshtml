@using  BankAppData.Models;
@model IEnumerable<Accounts>
@{
    ViewData["Title"] = "Top Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")*@
<div class="row">
    <div class="col-md-12">
        <h5 class="mt-5 font-weight-bold text-center">Top ten accounts</h5>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="callout callout-info">
            <div class="row">
                <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-12">
                    <div class="well details">
                        <div class="col-sm-12">
                            <div class="col-xs-12 col-sm-8">
                                <h2 style="text-decoration:underline;">Account Number: @item.AccountId</h2>
                                <p><strong>Balance :</strong>@item.Balance </p>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    }
    <br />
